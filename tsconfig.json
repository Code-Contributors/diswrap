{
  "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "types": ["node"],
      "typeRoots": ["./node_modules/@types"],
      "strictNullChecks": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
          "*": ["src/*"]
      }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["src/main.ts"]  
}
